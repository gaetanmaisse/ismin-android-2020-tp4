<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/f_create_book_edt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/f_create_book_txv_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/f_create_book_edt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/f_create_book_edt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_create_book_txv_date" />

    <Button
        android:id="@+id/f_create_book_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="saveBook"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_create_book_edt_date" />

    <TextView
        android:id="@+id/f_create_book_txv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/f_create_book_edt_author"
        android:text="@string/author"
        app:layout_constraintBottom_toTopOf="@+id/f_create_book_edt_author"
        app:layout_constraintEnd_toEndOf="@+id/f_create_book_edt_author"
        app:layout_constraintStart_toStartOf="@+id/f_create_book_edt_author" />

    <TextView
        android:id="@+id/f_create_book_txv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/f_create_book_edt_title"
        android:text="@string/title"
        app:layout_constraintBottom_toTopOf="@+id/f_create_book_edt_title"
        app:layout_constraintEnd_toEndOf="@+id/f_create_book_edt_title"
        app:layout_constraintStart_toStartOf="@+id/f_create_book_edt_title" />

    <TextView
        android:id="@+id/f_create_book_txv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/f_create_book_edt_date"
        android:text="@string/date"
        app:layout_constraintEnd_toEndOf="@+id/f_create_book_edt_date"
        app:layout_constraintStart_toStartOf="@+id/f_create_book_edt_date"
        app:layout_constraintTop_toBottomOf="@+id/f_create_book_edt_author" />
</androidx.constraintlayout.widget.ConstraintLayout>